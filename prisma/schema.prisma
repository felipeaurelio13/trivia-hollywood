generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id                String            @id @default(cuid())
  slug              String            @unique
  title             String
  releaseYear       Int
  decade            String
  productionCountry String
  distributor       String
  director          String
  topCast           String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  nominations       OscarNomination[]

  @@index([releaseYear])
  @@index([director])
}

model OscarNomination {
  id           String  @id @default(cuid())
  movieId      String
  ceremonyYear Int
  category     String
  won          Boolean @default(false)
  movie        Movie   @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@index([movieId])
  @@index([ceremonyYear])
}

model Room {
  id          String           @id @default(cuid())
  code        String           @unique
  status      RoomStatus       @default(waiting)
  maxPlayers  Int              @default(2)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  startedAt   DateTime?
  finishedAt  DateTime?
  players     RoomPlayer[]
  runs        RoomRun[]
  questionSet RoomQuestionSet?

  @@index([status, createdAt])
}

model RoomPlayer {
  id          String    @id @default(cuid())
  roomId      String
  displayName String
  joinedAt    DateTime  @default(now())
  finishedAt  DateTime?
  room        Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  run         RoomRun?

  @@unique([roomId, displayName])
  @@index([roomId, joinedAt])
}

model RoomQuestionSet {
  id                String   @id @default(cuid())
  roomId            String   @unique
  generatedAt       DateTime @default(now())
  questionsSnapshot String
  room              Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model RoomRun {
  id            String     @id @default(cuid())
  roomId        String
  playerId      String     @unique
  score         Int        @default(0)
  answeredCount Int        @default(0)
  totalTimeMs   Int?
  completedAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  room          Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  player        RoomPlayer @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([roomId, playerId])
  @@index([roomId, score, totalTimeMs])
}

enum RoomStatus {
  waiting
  started
  finished
}
